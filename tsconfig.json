{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "outDir": "dist/examples",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@js20/core": ["src/core/index.ts"],
            "@js20/core/*": ["src/core/*"]
        },
    },
    "include": ["src/core/**/*", "src/examples/**/*", "tests/**/*"],
}
