{
    "name": "@js20/core",
    "version": "1.0.1",
    "license": "MIT",
    "main": "./dist/cjs/index.js",
    "module": "./dist/esm/index.js",
    "types": "./dist/types/index.d.ts",
    "sideEffects": false,
    "files": [
        "dist/esm",
        "dist/cjs",
        "dist/types",
        "package.json",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "predocs:build": "rimraf ./dist/docs && rimraf ./dist/website",
        "docs:build:js": "node ./dist/docs/bundle.js",
        "docs:build:scss": "sass --no-source-map ./src/docs/assets/main.scss ./dist/website/public/main.css",
        "docs:build": "node src/scripts/build-docs.config.js && npm run docs:build:scss && npm run docs:build:js",
        "docs:deploy": "npm run docs:build && node deploy.js",
        "preexamples:build": "rimraf ./dist/examples",
        "examples:build": "node src/scripts/build-examples.config.js",
        "examples:output": "npm run examples:build && node src/scripts/examples-output.js",
        "example": "npm run examples:build && node src/scripts/example.js",
        "precore:build": "rimraf ./dist/cjs && rimraf ./dist/esm && rimraf ./dist/types",
        "core:build": "node src/scripts/build-core.js && tsc -p tsconfig.types.json",
        "start": "npm run examples:output && IS_DEV=true BUILD_COMMAND=docs:build APP_DIRECTORY=./src/docs OUTPUT_PATH=./dist/website WATCH_PATH=./src js20-site-dev",
        "test": "vitest run",
        "test:watch": "vitest --watch",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@js20/node-utils": "^1.4.6",
        "@js20/schema": "^1.2.0",
        "better-auth": "^1.3.17",
        "better-opn": "^3.0.2",
        "better-sqlite3": "^12.4.1",
        "express": "^4.21.2",
        "mysql2": "^3.15.1",
        "prettier": "^3.6.2",
        "sequelize": "^6.37.7",
        "sqlite3": "^5.1.7",
        "sql-formatter": "^15.6.9"
    },
    "devDependencies": {
        "@js20/deploy": "^1.1.0",
        "@js20/markdown-site": "^1.20.1",
        "@js20/node-utils": "^1.4.6",
        "@js20/schema": "^1.2.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^11.0.1",
        "@semantic-release/npm": "^12.0.1",
        "@types/better-sqlite3": "^7.6.13",
        "@types/express": "^5.0.3",
        "@types/node": "^22.10.5",
        "@vitest/coverage-v8": "^3.2.4",
        "better-auth": "^1.3.17",
        "better-opn": "^3.0.2",
        "better-sqlite3": "^12.4.1",
        "chokidar": "^4.0.3",
        "dotenv": "^17.2.2",
        "esbuild": "^0.24.2",
        "express": "^4.21.2",
        "mysql2": "^3.15.1",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "sass": "^1.83.4",
        "semantic-release": "^24.2.0",
        "sequelize": "^6.37.7",
        "sql-formatter": "^15.6.9",
        "sqlite3": "^5.1.7",
        "typescript": "^5.7.2",
        "vitest": "^3.2.4"
    }
}
