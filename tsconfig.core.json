{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "rootDir": "./src/core",
        "types": ["node"]
    },
    "include": ["src/core/**/*"],
    "exclude": ["node_modules", "dist"]
}
